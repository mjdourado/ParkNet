@page
@model ParkNet.Pages.Prices.TariffsPermits.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Price</h1>

<h4>TariffPermit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TariffPermit.Id" />
            <div class="form-group">
                <label asp-for="TariffPermit.VehicleType" class="control-label"></label>
                <input asp-for="TariffPermit.VehicleType" class="form-control" />
                <span asp-validation-for="TariffPermit.VehicleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TariffPermit.PermitType" class="control-label"></label>
                <select asp-for="TariffPermit.PermitType" class="form-control">
                    <option value="">Yearly</option>
                    <option value="">Biannualy</option>
                    <option value="">Quarterly</option>
                    <option value="">Monthly</option>
                </select>
                <span asp-validation-for="TariffPermit.PermitType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TariffPermit.Price" class="control-label"></label>
                <input asp-for="TariffPermit.Price" class="form-control" />
                <span asp-validation-for="TariffPermit.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
