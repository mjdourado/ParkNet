@page
@model ParkNet.Pages.Permits.SelectFloorModel
@{
}
<h1>Select Floor</h1>

<h4>Permit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedFloorId" class="control-label"></label>
                <select asp-for="SelectedFloorId" class="form-control" asp-items="ViewBag.Floors"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="SelectedFloorId" /> 
        </form>
    </div>
</div>