@page
@model ParkNet.Pages.Permits.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Buy New Permit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Permit.Type" class="control-label"></label>
                <select asp-for="Permit.Type" class="form-control" asp-items="ViewBag.PermitType">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Permit.VehicleId" class="control-label"></label>
                <select asp-for="Permit.VehicleId" class ="form-control" asp-items="ViewBag.VehicleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Permit.ParkId" class="control-label"></label>
                <select asp-for="Permit.ParkId" class="form-control" asp-items="ViewBag.Parks"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}