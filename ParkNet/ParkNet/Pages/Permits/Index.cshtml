@page
@model ParkNet.Pages.Permits.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Permits</h1>

<p>
    <a asp-page="Create">Buy New Permit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].ParkingSpace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Permit) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingSpace.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
