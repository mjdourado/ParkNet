@model ParkNet.Pages.Outs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Out</h1>

<p>
    <a asp-page="Create">Register New Out</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Out[0].Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Out[0].TicketNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Out[0].Left)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Out[0].TotalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Out[0].TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Out) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Left)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
        </tr>
}
    </tbody>
</table>
