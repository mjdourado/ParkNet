@page
@model ParkNet.Pages.Statistics.StatisticsModel
@{
    ViewData["Title"] = "Statistics";
}

<h1>Statistics</h1>
<br />
<div style="float: right; width: 200px; height: 100px; background-color: lightgreen; text-align: center; line-height: 100px;">
    Total Received: @Model.Profit
</div>
@if (Model.Transactions != null && Model.Transactions.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.Date</td>
                    <td>@transaction.Type</td>
                    <td>@transaction.Amount</td>
                </tr>
            }
            <div>
            </div>
        </tbody>
    </table>
}
else
{
    <p>No transactions found for the selected dates.</p>
}