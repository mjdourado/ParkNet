@page
@model ParkNet.Pages.Parks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Our Parks</h1>

<p>
    @if (User.Identity.IsAuthenticated && User.Identity.Name == "admin@parknet.pt")
    {
        <a asp-page="Create">Add a new park</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].ImageData)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Park)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    <img src="@item.ImageData" alt="Imagem" style="max-width: 100px; max-height: 100px;">
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    @if (User.Identity.IsAuthenticated && User.Identity.Name == "admin@parknet.pt")
                    {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
