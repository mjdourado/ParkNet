@page
@model ParkNet.Pages.Parks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].CountryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Park) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
